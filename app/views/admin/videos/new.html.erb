<div class="videos-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">

        <%= simple_form_for ([:admin, @video]) do |f| %>
          <%= f.input :name %>
          <%= f.input :location %>
          <%= f.input :price %>
          <%= f.input :video_tags, collection: @tags, label: 'Category' %>
          <%= f.input :file %>
          <%= f.input :file_cache, as: :hidden %>
          <%= button_tag(type: 'submit', class: 'btn-rounded btn-purple', style: 'font-size: 1.8em') do %>
            <i class="fa fa-upload"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

