<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class="row">
      <div class="col-xs-12 text-center">
        <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'btn btn-primary btn-lg margin-button' %><br />
      </div>
    </div>
  <% end -%>
<% end -%>
