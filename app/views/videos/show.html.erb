<div class="video-show">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="card text-center">
          <%= cl_video_tag(@video.file.file.public_id, loop: true, autoplay: true) %>

          <div class="control">
            <div class="btn-controls">
              <!-- Play/Pause button -->
              <div class="btn-play btn" title="Play/Pause video"><span class="icon-pause"></span></div>

              <!-- ProgressBar -->
              <div class="progress-bar">
                <div class="progress">
                  <span class="bufferBar"></span>
                  <span class="timeBar"></span>
                </div>
              </div>

              <!-- Sound Control -->
              <div class="sound sound2 btn" title="Mute/Unmute sound"><span class="icon-sound"></span></div>

              <!-- Full Screen btn -->
              <div class="btnFS btn" title="Switch to full screen"><span class="icon-fullscreen"></span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="video-info-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-9">
        <div class="video-details">
          <h2><%= @video.name %></h2>
          <p><%= ((Time.new - @video.created_at) / 60 / 60 / 24).ceil %> <%= 'day'.pluralize(((Time.new - @video.created_at) / 60 / 60 / 24).ceil) %> ago</p>
          <%= image_tag "#{@video.user.facebook_picture_url}", class: 'avatar' %>
          <span><strong><%= @video.user.first_name %></strong></span>
        </div>
      </div>

      <div class="col-xs-3 text-center">
        <div class="row">
          <div class="col-xs-12">
            <% if !current_user %>
              <%= render 'form_buy_button' %>
            <% elsif current_user.cart %> <!-- User logged in and has a cart -->
              <% if @video.user != current_user && !@is_video_in_cart%>
              <!-- Check if video is not owned by the user and it is not in user's cart -->
                <% if !current_user.bought_videos.where(video_id: @video.id) %>
                <!-- Check if the user already have bought the video -->
                  <%= render 'form_buy_button' %>
                <% end %>
              <% end %>
            <% elsif @video.user != current_user %>
            <!-- User logged in and doesnt have a cart. Check if oser is the video's owner -->
              <%= render 'form_buy_button' %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12">
            <h4>R$ <%= @video.price %></h4>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="video-tags">
          <h2 class="text-center">Categories</h2>
          <% @tags.each do |tag| %>
            <div class="col-xs-3 text-center">
              <a href="#"><%= tag.name %></a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        window.marker = markers;
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(3);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
