<div class="video-show">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <div class="card text-center">
          <%= cl_video_tag(@video.file.file.public_id, loop: true, autoplay: true) %>

          <div class="control">
            <div class="btn-controls">
              <!-- Play/Pause button -->
              <div class="btn-play btn" title="Play/Pause video"><span class="icon-play"></span></div>

              <!-- ProgressBar -->
              <div class="progress-bar">
                <div class="progress">
                  <span class="bufferBar"></span>
                  <span class="timeBar"></span>
                </div>
              </div>

              <!-- Sound Control -->
              <div class="sound sound2 btn" title="Mute/Unmute sound"><span class="icon-sound"></span></div>

              <!-- Full Screen btn -->
              <div class="btnFS btn" title="Switch to full screen"><span class="icon-fullscreen"></span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="buy-area">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-5 col-xs-2">
        <% if !current_user %>
          <%= render 'form_buy_button' %>
        <% elsif current_user.cart %> <!-- User logged in and has a cart -->
          <% if @video.user != current_user && !@is_video_in_cart %>
          <!-- Check if video is not owned by the user and it is not in user's cart -->
            <%= render 'form_buy_button' %>
          <% end %>
        <% elsif @video.user != current_user %>
        <!-- User logged in and doesnt have a cart. Check if oser is the video's owner -->
          <%= render 'form_buy_button' %>
        <% end %>
        <h1><%= @video.name %></h1>
        <h1><%= @video.user.email %></h1>
      </div>
    </div>
  </div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        window.marker = markers;
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(3);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>
